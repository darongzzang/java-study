	      System.out.print("-------------------------\n");
	      System.out.println("선택>>");
	      Scanner scanner = new Scanner(System.in);
	      
	      int answer = scanner.nextInt();
	      switch(answer) {
	      	case 1:
	      		Student.StudentAdd(args);
	      	case 2:
	      		
	      }
}
}
