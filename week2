package week2;
import java.util.Scanner;
package week2;
import java.util.Scanner;

public class Student {
	public static void StudentAdd(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("----------------------------------------------\r\n"
				+ "ID 이름 전공 학년 연구소ID 연구소명\r\n"
				+ "----------------------------------------------\n");
		System.out.print("추가할 학생의 ID, 이름, 전공, 학년, 연구소 ID, 연구소명을 입력하세요\n");
		int id = scanner.nextInt();
		String name = scanner.next();
		String major = scanner.next();
		int grade = scanner.nextInt();
		int labId = scanner.nextInt();
		String labName = scanner.next();
		
		System.out.print("----------------------------------------------\r\n"
				+ "ID 이름 전공 학년 연구소ID 연구소명\r\n"
				+ "----------------------------------------------\r\n");
		System.out.print(id + " "+ name + " " + major + " " + grade + " " + labId + " " + labName + "\n");
		System.out.print("----------------------------------------------");
	}
}

